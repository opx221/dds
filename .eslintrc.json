{
  "env": {
    "node": true,
    "jest/globals": true,
    "jest": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "camelcase": "off",
    "no-console": "off",
    "no-mixed-operators": "off",
    "consistent-return": "off"
  },
  "overrides": [
    {
      "files": ["*/**/pages/**/*.js"],
      "rules": {
        "indent": "off",
        "comma-dangle": ["error", "only-multiline"],
        "implicit-arrow-linebreak": "off",
        "function-paren-newline": "off"
      }
    }
  ]
}
